@page
@model HaulMaster.Pages.Clients.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].MC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].quickPayPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].quickPayTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Blacklisted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quickPayPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quickPayTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Blacklisted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.USDOT">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.USDOT">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.USDOT">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
